<%- include('../component/page-header') %>

<%- include('../component/page-nav') %>

<%- include('../component/page-notice') %>

<%- include('../component/modal-sign') %>

<div class='container'>
	<div class='row'>
		<div class='col-lg-offset-3 col-lg-6'>
			<h3 class='page-header'>用户注册</h3>
		</div>
	</div>
	<div class='row'>
		<div class='col-lg-offset-3 col-lg-6'>
			<div class='row czlife-add-padding-15'>
				<form class='form-horizontal' id='signup-form'>
					<div class='form-group'>
						<label class='col-lg-2'>用户名</label>
						<div class='col-lg-10'>
							<input type='text' class='form-control' placeholder='请输入用户名' name='username'/>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-lg-2'>密码</label>
						<div class='col-lg-10'>
							<input type='password' class='form-control' placeholder='请输入密码' name='password'/>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-lg-2'>重复密码</label>
						<div class='col-lg-10'>
							<input type='password' class='form-control' placeholder='请输入相同密码' name='repeatpassword'/>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-lg-2'>性别</label>
						<div class='col-lg-10'>
							<select class='form-control' name='gender'>
								<option value='f'>外星人</option>
								<option value='m'>男</option>
								<option value='w'>女</option>
							</select>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-lg-2'>个人简介</label>
						<div class='col-lg-10'>
							<textarea placeholder='如果你什么都不输入, 那我就只好说这个人很懒哦...' class='form-control' rows=10 name='bio'></textarea >
						</div>
					</div>

					
					<div class='form-group'>
						<div class='col-lg-offset-2 col-lg-10'>
							<button type='button' id='signup-submitBtn' class='btn btn-info'>注册</button>
							<button type='button' id='signup-resetBtn' class='btn btn-info'>重置</button>
							<span><a href='/signin'>已有账号？点击这里登陆吧</a></span>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<script type='text/javascript' src='/views-signup.js'></script>

<%- include('../component/page-footer') %>
